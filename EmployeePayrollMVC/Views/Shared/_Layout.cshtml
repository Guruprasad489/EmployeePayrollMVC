<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - EmployeePayrollMVC</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="~/css/Layout.css" />
    <link rel="stylesheet" href="~/css/EmpCreate.css" />
    <link rel="stylesheet" href="~/css/EmpDetails.css" />
    <link rel="stylesheet" href="~/css/EmpIndex.css" />
    <script src='https://kit.fontawesome.com/a076d05399.js' crossorigin='anonymous'></script>

</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <img class="logo-img" src="~/Assets/images/EmpPayrollLogo.png" alt="logo" />
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index"><h4>EmployeePayroll</h4></a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index"><h5 data-toggle="tooltip" data-placement="top" title="Home"><i style='font-size:1.2rem' class='fas'>&#xf015;</i> Home</h5></a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Employee" asp-action="Create" data-toggle="tooltip" data-placement="top" title="Add New Employee"><h5><i style='font-size:1.2rem' class='fas'>&#xf234;</i> NewEmployee</h5></a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Employee" asp-action="Index" data-toggle="tooltip" data-placement="top" title="Go to Employee List"><h5>EmployeeList</h5></a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy" data-toggle="tooltip" data-placement="top" title="Privacy Policy"><h5>Privacy</h5></a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>    

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2022 - EmployeePayrollMVC - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/js/notify.min.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
