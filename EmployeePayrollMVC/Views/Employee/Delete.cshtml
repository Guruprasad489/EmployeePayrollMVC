@model CommonLayer.Models.Employee

@{
    ViewData["Title"] = "Delete";
}


<div class="col-md-12">
    <form asp-action="Delete" class="form">
        <h4 class="delete-note text-danger">Are you sure you want to delete this employee?</h4>
        @*<h4 class="form-head">Employee Details</h4>*@
        <hr />
        <dl class="row">
            <dt class="col-sm-3">
                @Html.DisplayNameFor(model => model.EmpId)
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.EmpId)
            </dd>
            <dt class="col-sm-3">
                @Html.DisplayNameFor(model => model.Name)
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.Name)
            </dd>
            <dt class="col-sm-3">
                @Html.DisplayNameFor(model => model.ProfileImage)
            </dt>
            <dd class="col-sm-9">
                @*@Html.DisplayFor(model => model.ProfileImage)*@
                <img src="@Url.Content(@Model.ProfileImage)" width="50" height="50" />
            </dd>
            <dt class="col-sm-3">
                @Html.DisplayNameFor(model => model.Gender)
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.Gender)
            </dd>
            <dt class="col-sm-3">
                @Html.DisplayNameFor(model => model.Dept)
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.Dept)
            </dd>
            <dt class="col-sm-3">
                @Html.DisplayNameFor(model => model.Salary) (&#x20B9)
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.Salary)
            </dd>
            <dt class="col-sm-3">
                @Html.DisplayNameFor(model => model.Startdate)
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.Startdate)
            </dd>
            <dt class="col-sm-3">
                @Html.DisplayNameFor(model => model.Notes)
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.Notes)
            </dd>
        </dl>

        <div class="buttons">
        <input type="submit" value="&#10060; Delete" onclick="confirm('Are You Sure you want to delete')" class="btn btn-danger" /> 
        <a asp-action="Index" class="btn btn-primary"><i style='font-size:1rem' class='fas'>&#xf359;</i> Back to List</a>
        </div>
    </form>
</div>
