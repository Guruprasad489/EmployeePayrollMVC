@model IEnumerable<CommonLayer.Models.Employee>

@{
    ViewData["Title"] = "Index";
}
<div class="buttons">
    <h4 class="form-head">Employee List <i style='font-size:24px' class='fas'>&#xf0c0;</i></h4>
    <a asp-action="Create" class="btn btn-primary"><i style='font-size:1rem' class='fas'>&#xf234;</i> Add New Employee</a>
</div>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.EmpId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ProfileImage)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Gender)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Dept)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Salary) (&#x20B9)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Startdate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Notes)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.EmpId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                <img src="@Url.Content(item.ProfileImage)" width="36" height="36" />
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Gender)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Dept)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Salary)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Startdate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Notes)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id=item.EmpId }, new {@class = "btn btn-primary btn-sm"}) 
                @Html.ActionLink("Details", "Details", new { id=item.EmpId }, new {@class = "btn btn-info btn-sm"}) 
                @Html.ActionLink("Delete", "Delete", new { id=item.EmpId }, new {@class = "btn btn-danger btn-sm"})
            </td>
        </tr>
}
    </tbody>
</table>
